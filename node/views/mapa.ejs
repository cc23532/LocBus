<!DOCTYPE html>
<html>
<head>
    <title>Meu Mapa</title>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: -22.97203001196739, lng: -46.99539974348299 },
                zoom: 14
            });

            fetch('/get-pontos')
                .then(function(response) {
                    return response.json();
                })
                .then(function(data) {
                    // Iterar sobre os dados e adicionar marcadores ao mapa
                    data.forEach(function(ponto) {
                        var marker = new google.maps.Marker({
                            position: { lat: parseFloat(ponto.lat), lng: parseFloat(ponto.long) },
                            map: map,
                            title: ponto.logradouro,
                        });
                        markers.push(marker);
                    });
                })
                .catch(function(error) {
                    console.error('Erro na obtenção de dados do servidor:', error);
                });
        }

        google.maps.event.addDomListener(window, 'load', initMap);
    </script>


    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzGJHcT9GwLSLre5lNgyS0RmaqaA6R8IQ&callback=initMap" async defer></script>
</body>
</html>
