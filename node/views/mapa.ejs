<!DOCTYPE html>
<html>
<head>
    <title>Meu Mapa</title>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: -22.97203001196739, lng: -46.99539974348299 },
                zoom: 14
            });

            // Use o Fetch API para buscar dados do PHP
            fetch('getPontos.php')
                .then(response => response.json())
                .then(data => {
                    data.forEach(point => {
                        var marker = new google.maps.Marker({
                            position: { lat: parseFloat(point.lat), lng: parseFloat(point.long) },
                            map: map,
                            title: point.logradouro
                        });
                    });
                })
                .catch(error => console.error('Erro ao buscar dados: ', error));
        }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzGJHcT9GwLSLre5lNgyS0RmaqaA6R8IQ&callback=initMap" async defer></script>
</body>
</html>
