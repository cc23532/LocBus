<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LocBus Simulator</title>
    <!-- link css -->
    <link rel="stylesheet" href="./css/horarios.css" />

    <!-- link HEADER/FOOTER css -->
    <link rel="stylesheet" href="./css/header_footer.css" />

    <!-- link FONT AWSONE CDN -->
    <script
      src="https://kit.fontawesome.com/eeb24722a1.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- header -->
    <header>
      <a href="index.html" class="Logo"
        ><img src="./assets/imgs/lockbus-logo.png" alt="Logo LockBus Simulator"
      /></a>

      <nav class="navbar">
        <ul class="nav-links">
          <li><a href="#index.html">Início</a></li>
          <li><a href="horarios.html">Horários</a></li>
          <li><a href="#linhas.html">Linhas</a></li>
          <li><a href="#quemSomos.html">Quem Somos</a></li>
          <li><a href="#faleConosco.html">Fale Conosco</a></li>
        </ul>
      </nav>

      <div class="login">
        <div class="login-icon">
          <a href="login.html"><i class="fa-regular fa-user fa-bounce"></i></a>
        </div>
        <div class="login-text">
          <a href="login.html"><p>Ainda não fez login?</p> </a>
          <a href="login.html"><p>Fazer Login</p></a>
        </div>
      </div>
    </header>

    <!-- linha colorida -->
    <div class="colorized-line"></div>

    <!-- sumário -->
    <div class="summary">
      <a href="index.html"><span>Início</span></a>
      <span> > </span>
      <a href="horarios.html">Horários de ônibus</a>
    </div>

    <!-- banner -->
    <section class="banner">
      <div class="banner-img">
        <img src="./assets/imgs/banner-horario.png" alt="" />
      </div>
    </section>

    <!-- tabela horarios -->
    <section class="container">
      <main class="table">
        <section class="table-header">
          <h1>Horários para o Ponto <%= idPonto %></h1>
        </section>
        <section class="table-body">
          <table>
            <thead>
              <tr>
                <th></th>
                <th>Linhas</th>
                <th>Destino</th>
                <th>Horário</th>
                <th>Todos Horários</th>
              </tr>
            </thead>

            <tbody>
              <% for (let horario of horarios) { %>

              <tr>
                <td>
                  <i class="star-icons">
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                  </i>
                </td>
                <td><%= horario.idLinha %></td>
                <td><%= horario.sentidoLinha %></td>
                <td><%= horario.horarioTabela %></td>
                <td>
                  <a href="#"><i class="fa-regular fa-clock"></i></a>
                </td>
              </tr>

              <% } %>
            </tbody>
          </table>
        </section>
      </main>
    </section>

    <!-- linha colorida -->
    <div class="colorized-line"></div>

    <!-- footer -->
    <footer>
      <section class="footer-container">
        <div class="footer-block-list">
          <div class="footer-blocks">
            <div class="footer-menu">
              <div class="footer-header">
                <span>Menu de rodapé</span>
              </div>
              <div class="footer-body">
                <a href="#">Horários</a>
                <a href="#">Linhas</a>
                <a href="#">Quem Somos</a>
                <a href="#">Fale Conosco</a>
              </div>
            </div>
          </div>

          <div class="footer-blocks">
            <div class="footer-service">
              <div class="footer-header">
                <span>Atendimento</span>
              </div>
              <div class="footer-body">
                <p>
                  <strong>Email: </strong> xxxx@gmail.com
                  <br />
                  <strong>WhatsApp: </strong> +55 (19) 12345 - 6789
                </p>
              </div>
            </div>
          </div>

          <div class="footer-img">
            <img src="./assets/imgs/lockbus-logo.png" alt="Logo LockBus" />
          </div>
        </div>
      </section>
    </footer>
  </body>
</html>
